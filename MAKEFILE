debug: CODE\TRON.ASM
	ML /Zi /W3 /WX 																							/c CODE\SETTINGS\SETTINGS.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS																			/c CODE\VAR/VAR.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR																/c CODE\MISC/MISC.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR																/c CODE\VIDEO\VIDEO.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\MISC										/c CODE\GUI\GUI.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\MISC													/c CODE\INPUT\INPUT.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\GUI /ICODE\INPUT /ICODE\MISC				/c CODE\CORE\CORE.ASM
	ML /Zi /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\GUI /ICODE\CORE  /ICODE\INPUT /ICODE\MISC /c CODE\TRON.ASM
	LINK /CODEVIEW TRON.OBJ CORE.OBJ GUI.OBJ VIDEO.OBJ INPUT.OBJ VAR.OBJ SETTINGS.OBJ MISC.OBJ, TRON_D.EXE, , , , 
release: CODE\TRON.ASM
	ML /W3 /WX 																							/c CODE\SETTINGS\SETTINGS.ASM
	ML /W3 /WX /ICODE\SETTINGS																			/c CODE\VAR/VAR.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR																/c CODE\MISC/MISC.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR																/c CODE\VIDEO\VIDEO.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\MISC										/c CODE\GUI\GUI.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\MISC													/c CODE\INPUT\INPUT.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\GUI /ICODE\INPUT /ICODE\MISC				/c CODE\CORE\CORE.ASM
	ML /W3 /WX /ICODE\SETTINGS /ICODE\VAR /ICODE\VIDEO /ICODE\GUI /ICODE\CORE  /ICODE\INPUT /ICODE\MISC /c CODE\TRON.ASM
	LINK TRON.OBJ CORE.OBJ GUI.OBJ VIDEO.OBJ INPUT.OBJ VAR.OBJ SETTINGS.OBJ MISC.OBJ, TRON.EXE, , , , 
clean:
	del *.EXE
	del *.OBJ
	del *.BAK
	del *.MAP
cv:
	cv /s TRON_D.EXE